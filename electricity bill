include<stdio.h>
#include<math.h>
int main()
{
    int j;
    scanf("%d",&j);
    if(j<=200)
    {
        printf("Rs.%f",(j*0.5));
    }
    else if(j<=400)
    {
        printf("Rs.%f",((j*0.65)+100));
    }
    else if(j<=600)
    {
        printf("Rs.%f",((j*0.80)+200));
    }
    else if(600<j)
    {
        printf("Rs.%f",((j*1.25)+425));
    }
    return 0;
        
}
